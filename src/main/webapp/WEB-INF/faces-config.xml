<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee      http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 <navigation-rule>
  <!-- Routes pour employé -->
  <from-view-id>/addEmployee.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{ctrEmployeeBean.saveEmployee}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/empList.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/updateEmp.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{ctrEmployeeBean.updateEmployee}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/empList.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/empList.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{ctrEmployeeBean.updateEmpById}</from-action>
   <to-view-id>/updateEmp.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-action>#{ctrEmployeeBean.deleteEmpById}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/empList.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <!-- Nav cases Project -->
 <navigation-rule>
  <from-view-id>/projectList.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{ctrProjetBean.getProjectPhase}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/phaseList.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-action>#{ctrProjetBean.addProject}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/addOrUpdateProject.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-action>#{ctrProjetBean.selectProjectById}</from-action>
   <to-view-id>/addOrUpdateProject.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/addOrUpdateProject.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{ctrProjetBean.saveProject}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/projectList.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-action>#{ctrProjetBean.saveProject}</from-action>
   <from-outcome>errors</from-outcome>
   <to-view-id>/addOrUpdateProject.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/addOrUpdateProject.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{ctrProjetBean.updateProjectById}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/projectList.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <!-- Nav cases Phase -->
 <navigation-rule>
  <from-view-id>/addPhase.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{ctrPhaseBean.savePhase}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/phaseList.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-action>#{ctrPhaseBean.savePhase}</from-action>
   <from-outcome>errors</from-outcome>
   <to-view-id>/addPhase.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/phaseList.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{ctrPhaseBean.addPhase}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/addPhase.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <application>
  <resource-bundle>
   <base-name>af.cmr.indyli.gespro.light.trans.properties.messages</base-name>
   <var>msg</var>
  </resource-bundle>
  <!-- Ajout de la langue par défaut et des langues supportées -->
  <locale-config>
   <default-locale>en</default-locale>
   <supported-locale>fr</supported-locale>
   <supported-locale>en</supported-locale>
  </locale-config>
 </application>
</faces-config>
